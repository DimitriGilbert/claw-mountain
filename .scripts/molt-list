#!/bin/bash
# @parseArger-begin
# @parseArger-help "List all molts and their status" --option "help" --short-option "h"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger opt base-dir "Base directory for molts" --short d --default-value "/home/didi/molts" --complete "directory"
# @parseArger flag verbose "Show detailed information" --short v
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
# OPTIONALS ARGUMENTS
_arg_base_dir="/home/didi/molts"
# FLAGS
_arg_verbose="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "List all molts and their status:"
	echo -e "	-d, --base-dir <base-dir>: Base directory for molts [default: ' /home/didi/molts ']"
	echo -e "	-v|--verbose|--no-verbose: Show detailed information"
	echo -e "Usage :
	$0 [--base-dir <value>] [--[no-]verbose]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="\e[0;31m";
				;;
			-2)
				_arg_COLOR="\e[0;33m";
				;;
			-1)
				_arg_COLOR="\e[1;33m";
				;;
			1)
				_arg_COLOR="\e[0;32m";
				;;
			2)
				_arg_COLOR="\e[1;36m";
				;;
			3)
				_arg_COLOR="\e[0;36m";
				;;
			*)
				_arg_COLOR="\e[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}\e[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-d|--base-dir)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_base_dir="$2"
				shift
				;;
			--base-dir=*)
				_arg_base_dir="${1##--base-dir=}"
				;;
			-d*)
				_arg_base_dir="${1##-d}"
				;;
			
			-v|--verbose)
				_arg_verbose="on"
				;;
			--no-verbose)
				_arg_verbose="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			--verbose)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level + 1))";
				else
					_verbose_level="$2";
					shift;
				fi
				;;
			--quiet)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level - 1))";
				else
					_verbose_level="-$2";
					shift;
				fi
				;;
			
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string=""
	if [ "${_positionals_count}" -gt 0 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 0 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').
	${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 0 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 0 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	base-dir: ${_arg_base_dir}";
	echo -e "	verbose: ${_arg_verbose}";

}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;




# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

BASE_DIR="$_arg_base_dir"

if [ ! -d "$BASE_DIR" ]; then
  die "Base directory not found: $BASE_DIR" 1
fi

# Header
echo "========================================"
echo "           MOLT REGISTRY"
echo "========================================"
echo ""

# Count molts
MOLT_COUNT=0
RUNNING_COUNT=0
STOPPED_COUNT=0

# Iterate through directories
for molt_dir in "$BASE_DIR"/*/; do
  [ -d "$molt_dir" ] || continue
  
  # Check if it's a molt (has .molt-info file)
  if [ -f "$molt_dir/.molt-info" ]; then
    MOLT_COUNT=$((MOLT_COUNT + 1))
    
    # Load molt info
    source "$molt_dir/.molt-info"
    MOLT_NAME=$(basename "$molt_dir")
    
    # Get port from config
    CONFIG_FILE="$molt_dir/.openclaw/openclaw.json"
    if [ -f "$CONFIG_FILE" ]; then
      MOLT_PORT=$(grep -o '"port":[[:space:]]*[0-9]*' "$CONFIG_FILE" 2>/dev/null | grep -o '[0-9]*$' || echo "unknown")
    fi
    
    # Check status
    PID_FILE="$molt_dir/.openclaw/gateway.pid"
    STATUS="stopped"
    PID=""
    
    if [ -f "$PID_FILE" ]; then
      PID=$(cat "$PID_FILE")
      if ps -p "$PID" > /dev/null 2>&1; then
        STATUS="running"
        RUNNING_COUNT=$((RUNNING_COUNT + 1))
      else
        STATUS="stale"
        STOPPED_COUNT=$((STOPPED_COUNT + 1))
      fi
    else
      # Check for orphan processes
      ORPHAN_PID=$(pgrep -u "$MOLT_NAME" -f "openclaw.*gateway" 2>/dev/null | head -1 || echo "")
      if [ -n "$ORPHAN_PID" ]; then
        STATUS="running*"
        PID="$ORPHAN_PID"
        RUNNING_COUNT=$((RUNNING_COUNT + 1))
      else
        STOPPED_COUNT=$((STOPPED_COUNT + 1))
      fi
    fi
    
    # Display molt info
    echo "Molt:      $MOLT_NAME"
    echo "Port:      ${MOLT_PORT:-unknown}"
    echo "Home:      $molt_dir"
    echo "Status:    $STATUS ${PID:+($PID)}"
    
    if [ "$_arg_verbose" = "on" ]; then
      echo "User:      $MOLT_NAME"
      if id "$MOLT_NAME" &>/dev/null; then
        echo "Docker:    $(id -nG "$MOLT_NAME" 2>/dev/null | grep -qw "docker" && echo "yes" || echo "no")"
      fi
      echo "Created:   ${CREATED:-unknown}"
    fi
    
    echo "----------------------------------------"
  fi
done

echo ""
echo "Summary: $MOLT_COUNT molts total ($RUNNING_COUNT running, $STOPPED_COUNT stopped)"
echo ""

if [ $MOLT_COUNT -eq 0 ]; then
  echo "No molts found. Create one with:"
  echo "  ${0%/*}/create-molt <name>"
fi
