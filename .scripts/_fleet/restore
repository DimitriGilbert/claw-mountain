#!/bin/bash
# @parseArger-begin
# @parseArger-help "Restore molts from a backup archive" --option "help" --short-option "h"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger opt from "Backup file to restore from"
# @parseArger opt select "Select specific molts to restore (comma-separated)"
# @parseArger flag force "Overwrite existing molts"
# @parseArger flag dry-run "Show what would be restored"
# @parseArger flag skip-users "Restore configs only, skip user creation"
# @parseArger flag verbose "Enable verbose output" --short v
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
# OPTIONALS ARGUMENTS
_arg_from=
_required_arg_from="on";
_arg_select=
# FLAGS
_arg_force="off"
_arg_dry_run="off"
_arg_skip_users="off"
_arg_verbose="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "Restore molts from a backup archive:"
	echo -e "	--from <from>: Backup file to restore from (REQUIRED)"
	echo -e "	--select <select>: Select specific molts to restore (comma-separated)"
	echo -e "	--force|--no-force: Overwrite existing molts"
	echo -e "	--dry-run|--no-dry-run: Show what would be restored"
	echo -e "	--skip-users|--no-skip-users: Restore configs only, skip user creation"
	echo -e "	-v|--verbose|--no-verbose: Enable verbose output"
	echo -e "Usage :
	$0 [--from <value>] [--select <value>] [--[no-]force] [--[no-]dry-run] [--[no-]skip-users] [--[no-]verbose]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="[0;31m";
				;;
			-2)
				_arg_COLOR="[0;33m";
				;;
			-1)
				_arg_COLOR="[1;33m";
				;;
			1)
				_arg_COLOR="[0;32m";
				;;
			2)
				_arg_COLOR="[1;36m";
				;;
			3)
				_arg_COLOR="[0;36m";
				;;
			*)
				_arg_COLOR="[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			--from)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_from="$2"
				shift
				;;
			--from=*)
				_arg_from="${_key##--from=}"
				;;
			
			--select)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_select="$2"
				shift
				;;
			--select=*)
				_arg_select="${_key##--select=}"
				;;
			
			--force)
				_arg_force="on"
				;;
			--no-force)
				_arg_force="off"
				;;
			--dry-run)
				_arg_dry_run="on"
				;;
			--no-dry-run)
				_arg_dry_run="off"
				;;
			--skip-users)
				_arg_skip_users="on"
				;;
			--no-skip-users)
				_arg_skip_users="off"
				;;
			-v|--verbose)
				_arg_verbose="on"
				;;
			--no-verbose)
				_arg_verbose="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			--verbose)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level + 1))";
				else
					_verbose_level="$2";
					shift;
				fi
				;;
			--quiet)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level - 1))";
				else
					_verbose_level="-$2";
					shift;
				fi
				;;
			
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string=""
	if [ "${_positionals_count}" -gt 0 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 0 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').
	${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 0 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 0 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	from: ${_arg_from}";
	echo -e "	select: ${_arg_select}";
	echo -e "	force: ${_arg_force}";
	echo -e "	dry-run: ${_arg_dry_run}";
	echo -e "	skip-users: ${_arg_skip_users}";
	echo -e "	verbose: ${_arg_verbose}";

}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;

if [ -z "$_arg_from" ]; then die "Missing required option: from"; fi;



# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

# Auto-detect project root
PROJECT_ROOT="$(cd "$_SCRIPT_DIR/../../.." && pwd)"
BASE_DIR="$PROJECT_ROOT"

# Get backup file
BACKUP_FILE="$_arg_from"
SELECTED_MOLTS="$_arg_select"
DRY_RUN="$_arg_dry_run"
FORCE="$_arg_force"
SKIP_USERS="$_arg_skip_users"

# Validate backup file exists
if [ ! -f "$BACKUP_FILE" ]; then
  die "Backup file not found: $BACKUP_FILE" 1
fi

log "Preparing to restore from: $BACKUP_FILE" 1

# Create temp directory for extraction
TEMP_DIR=$(mktemp -d)
trap "rm -rf $TEMP_DIR" EXIT

# Extract manifest first
log "Extracting manifest..." 2
tar -xf "$BACKUP_FILE" -C "$TEMP_DIR" manifest.json 2>/dev/null || die "Failed to extract manifest from backup" 1

# Read manifest
if [ ! -f "$TEMP_DIR/manifest.json" ]; then
  die "Invalid backup: manifest.json not found" 1
fi

# Parse manifest (simple grep/sed extraction)
BACKUP_HOSTNAME=$(grep -o '"hostname":"[^"]*"' "$TEMP_DIR/manifest.json" | cut -d'"' -f4 || echo "unknown")
BACKUP_TIMESTAMP=$(grep -o '"timestamp":"[^"]*"' "$TEMP_DIR/manifest.json" | cut -d'"' -f4 || echo "unknown")

log "Backup info:" 1
log "  Hostname: $BACKUP_HOSTNAME" 2
log "  Created: $BACKUP_TIMESTAMP" 2

# Get list of molts in backup
MOLTS_IN_BACKUP=$(tar -tf "$BACKUP_FILE" | grep -E "^[^/]+/" | cut -d'/' -f1 | sort -u | grep -v "manifest.json" || true)

if [ -z "$MOLTS_IN_BACKUP" ]; then
  die "No molts found in backup" 1
fi

# Filter molts if --select specified
if [ -n "$SELECTED_MOLTS" ]; then
  IFS=',' read -ra SELECTED <<< "$SELECTED_MOLTS"
  FILTERED_MOLTS=""
  for molt in $MOLTS_IN_BACKUP; do
    for selected in "${SELECTED[@]}"; do
      if [ "$molt" = "$selected" ]; then
        FILTERED_MOLTS="$FILTERED_MOLTS $molt"
        break
      fi
    done
  done
  MOLTS_IN_BACKUP=$(echo "$FILTERED_MOLTS" | tr -s ' ')
  
  if [ -z "$MOLTS_IN_BACKUP" ]; then
    die "No matching molts found in backup for selection: $SELECTED_MOLTS" 1
  fi
fi

# Check for existing molts
EXISTING_MOLTS=""
for molt in $MOLTS_IN_BACKUP; do
  if [ -d "$BASE_DIR/$molt" ]; then
    EXISTING_MOLTS="$EXISTING_MOLTS $molt"
  fi
done

if [ -n "$EXISTING_MOLTS" ]; then
  log "Warning: The following molts already exist:$EXISTING_MOLTS" -1
  if [ "$FORCE" = "off" ]; then
    die "Use --force to overwrite existing molts" 1
  fi
fi

# Dry run mode
if [ "$DRY_RUN" = "on" ]; then
  log "DRY RUN - Would restore the following molts:" 1
  for molt in $MOLTS_IN_BACKUP; do
    echo "  - $molt"
  done
  log "No changes made (dry run mode)" 1
  exit 0
fi

# Confirm restoration
log "About to restore the following molts:" 1
for molt in $MOLTS_IN_BACKUP; do
  if [ -d "$BASE_DIR/$molt" ]; then
    echo "  - $molt (will overwrite)"
  else
    echo "  - $molt (new)"
  fi
done
echo ""
read -p "Continue with restoration? (yes/no): " confirm
echo ""

if [ "$confirm" != "yes" ]; then
  log "Restoration cancelled" -1
  exit 0
fi

# Extract full backup
log "Extracting backup..." 1
tar -xf "$BACKUP_FILE" -C "$TEMP_DIR" 2>/dev/null || die "Failed to extract backup" 1

# Restore each molt
for molt in $MOLTS_IN_BACKUP; do
  log "Restoring molt: $molt" 1
  
  MOLT_SRC="$TEMP_DIR/$molt"
  MOLT_DEST="$BASE_DIR/$molt"
  
  if [ ! -d "$MOLT_SRC" ]; then
    log "  Warning: Source directory not found for $molt" -2
    continue
  fi
  
  # Create user if needed (and not skipping)
  if [ "$SKIP_USERS" = "off" ]; then
    if ! id "$molt" &>/dev/null; then
      log "  Creating user: $molt" 2
      sudo useradd -m -d "$MOLT_DEST" -s /bin/bash "$molt" 2>/dev/null || {
        log "  Failed to create user $molt" -2
        continue
      }
      
      # Add to docker group
      if getent group docker >/dev/null 2>&1; then
        sudo usermod -aG docker "$molt" 2>/dev/null || true
      fi
    fi
  fi
  
  # Create directory if needed
  if [ ! -d "$MOLT_DEST" ]; then
    mkdir -p "$MOLT_DEST"
    if id "$molt" &>/dev/null; then
      sudo chown "$molt:$molt" "$MOLT_DEST" 2>/dev/null || true
    fi
  fi
  
  # Restore files
  log "  Restoring files..." 2
  
  # Restore .molt-info
  if [ -f "$MOLT_SRC/.molt-info" ]; then
    if id "$molt" &>/dev/null; then
      sudo cp "$MOLT_SRC/.molt-info" "$MOLT_DEST/" 2>/dev/null || cp "$MOLT_SRC/.molt-info" "$MOLT_DEST/" 2>/dev/null || true
      sudo chown "$molt:$molt" "$MOLT_DEST/.molt-info" 2>/dev/null || true
    else
      cp "$MOLT_SRC/.molt-info" "$MOLT_DEST/" 2>/dev/null || true
    fi
  fi
  
  # Restore .openclaw directory
  if [ -d "$MOLT_SRC/.openclaw" ]; then
    if id "$molt" &>/dev/null; then
      sudo rm -rf "$MOLT_DEST/.openclaw" 2>/dev/null || true
      sudo cp -r "$MOLT_SRC/.openclaw" "$MOLT_DEST/" 2>/dev/null || true
      sudo chown -R "$molt:$molt" "$MOLT_DEST/.openclaw" 2>/dev/null || true
    else
      rm -rf "$MOLT_DEST/.openclaw" 2>/dev/null || true
      cp -r "$MOLT_SRC/.openclaw" "$MOLT_DEST/" 2>/dev/null || true
    fi
  fi
  
  # Restore mail configs
  for config in .msmtprc .mbsyncrc; do
    if [ -f "$MOLT_SRC/$config" ]; then
      if id "$molt" &>/dev/null; then
        sudo cp "$MOLT_SRC/$config" "$MOLT_DEST/" 2>/dev/null || true
        sudo chown "$molt:$molt" "$MOLT_DEST/$config" 2>/dev/null || true
      else
        cp "$MOLT_SRC/$config" "$MOLT_DEST/" 2>/dev/null || true
      fi
    fi
  done
  
  # Restore state directories
  for state_dir in .molt-state .mail-state; do
    if [ -d "$MOLT_SRC/$state_dir" ]; then
      if id "$molt" &>/dev/null; then
        sudo rm -rf "$MOLT_DEST/$state_dir" 2>/dev/null || true
        sudo cp -r "$MOLT_SRC/$state_dir" "$MOLT_DEST/" 2>/dev/null || true
        sudo chown -R "$molt:$molt" "$MOLT_DEST/$state_dir" 2>/dev/null || true
      else
        rm -rf "$MOLT_DEST/$state_dir" 2>/dev/null || true
        cp -r "$MOLT_SRC/$state_dir" "$MOLT_DEST/" 2>/dev/null || true
      fi
    fi
  done
  
  # Restore Maildir if present
  if [ -d "$MOLT_SRC/Maildir" ]; then
    log "  Restoring Maildir..." 2
    if id "$molt" &>/dev/null; then
      sudo rm -rf "$MOLT_DEST/Maildir" 2>/dev/null || true
      sudo cp -r "$MOLT_SRC/Maildir" "$MOLT_DEST/" 2>/dev/null || true
      sudo chown -R "$molt:$molt" "$MOLT_DEST/Maildir" 2>/dev/null || true
    else
      rm -rf "$MOLT_DEST/Maildir" 2>/dev/null || true
      cp -r "$MOLT_SRC/Maildir" "$MOLT_DEST/" 2>/dev/null || true
    fi
  fi
  
  # Update .molt-info with restored timestamp
  if [ -f "$MOLT_DEST/.molt-info" ]; then
    echo "RESTORED=$(date -Iseconds)" >> "$MOLT_DEST/.molt-info" 2>/dev/null || \
      sudo -u "$molt" bash -c "echo 'RESTORED=$(date -Iseconds)' >> '$MOLT_DEST/.molt-info'" 2>/dev/null || true
  fi
  
  log "  Restored $molt" 1
done

log "Restoration complete!" 1