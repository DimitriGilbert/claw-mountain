#!/bin/bash
# @parseArger-begin
# @parseArger-help "List available fleet backups" --option "help" --short-option "h"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger opt backup-dir "Directory containing backups" --default-value "./.backups"
# @parseArger flag json "Output in JSON format"
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
# OPTIONALS ARGUMENTS
_arg_backup_dir="./.backups"
# FLAGS
_arg_json="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "List available fleet backups:"
	echo -e "	--backup-dir <backup-dir>: Directory containing backups [default: ' ./.backups ']"
	echo -e "	--json|--no-json: Output in JSON format"
	echo -e "Usage :
	$0 [--backup-dir <value>] [--[no-]json]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="\033[0;31m";
				;;
			-2)
				_arg_COLOR="\033[0;33m";
				;;
			-1)
				_arg_COLOR="\033[1;33m";
				;;
			1)
				_arg_COLOR="\033[0;32m";
				;;
			2)
				_arg_COLOR="\033[1;36m";
				;;
			3)
				_arg_COLOR="\033[0;36m";
				;;
			*)
				_arg_COLOR="\033[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}\033[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			--backup-dir)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_backup_dir="$2"
				shift
				;;
			--backup-dir=*)
				_arg_backup_dir="${_key##--backup-dir=}"
				;;
			
			--json)
				_arg_json="on"
				;;
			--no-json)
				_arg_json="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			--verbose)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level + 1))";
				else
					_verbose_level="$2";
					shift;
				fi
				;;
			--quiet)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level - 1))";
				else
					_verbose_level="-$2";
					shift;
				fi
				;;
			
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string=""
	if [ "${_positionals_count}" -gt 0 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 0 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').\n\t${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 0 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 0 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	backup-dir: ${_arg_backup_dir}";
	echo -e "	json: ${_arg_json}";

}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;




# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

# Get backup directory
BACKUP_DIR="$_arg_backup_dir"

# Create backup directory if it doesn't exist
if [ ! -d "$BACKUP_DIR" ]; then
  log "Backup directory not found: $BACKUP_DIR" -1
  log "No backups available" 0
  exit 0
fi

# Find backup files
BACKUP_FILES=$(find "$BACKUP_DIR" -name "*.tar.gz" -o -name "*.tar.bz2" -o -name "*.tar.xz" 2>/dev/null | sort -r)

if [ -z "$BACKUP_FILES" ]; then
  log "No backups found in $BACKUP_DIR" 0
  exit 0
fi

# JSON output mode
if [ "$_arg_json" = "on" ]; then
  echo '{"backups": ['
  FIRST=true
  echo "$BACKUP_FILES" | while read -r backup_file; do
    if [ "$FIRST" = true ]; then
      FIRST=false
    else
      echo ","
    fi
    
    FILENAME=$(basename "$backup_file")
    SIZE=$(stat -f%z "$backup_file" 2>/dev/null || stat -c%s "$backup_file" 2>/dev/null || echo "0")
    MODIFIED=$(stat -c %y "$backup_file" 2>/dev/null || stat -f %Sm "$backup_file" 2>/dev/null || echo "unknown")
    
    # Try to extract hostname from manifest
    HOSTNAME="unknown"
    MOLT_COUNT=0
    if tar -tf "$backup_file" | grep -q "manifest.json"; then
      MANIFEST=$(tar -xf "$backup_file" -O manifest.json 2>/dev/null)
      HOSTNAME=$(echo "$MANIFEST" | grep -o '"hostname":"[^"]*"' | cut -d'"' -f4 || echo "unknown")
      MOLT_COUNT=$(echo "$MANIFEST" | grep -o '"name":' | wc -l | tr -d ' ')
    fi
    
    echo "  {"
    echo "    \"filename\": \"$FILENAME\","
    echo "    \"path\": \"$backup_file\","
    echo "    \"size_bytes\": $SIZE,"
    echo "    \"modified\": \"$MODIFIED\","
    echo "    \"hostname\": \"$HOSTNAME\","
    echo "    \"molt_count\": $MOLT_COUNT"
    echo -n "  }"
  done
  echo ""
  echo ']}'
else
  # Human-readable output
  echo "Available Fleet Backups"
  echo "======================="
  echo ""
  printf "%-30s %-15s %-10s %-20s\n" "Filename" "Size" "Molts" "Created"
  echo "--------------------------------------------------------------------------------"
  
  echo "$BACKUP_FILES" | while read -r backup_file; do
    FILENAME=$(basename "$backup_file")
    SIZE=$(stat -f%z "$backup_file" 2>/dev/null || stat -c%s "$backup_file" 2>/dev/null || echo "0")
    MODIFIED=$(stat -c %y "$backup_file" 2>/dev/null | cut -d' ' -f1 || echo "unknown")
    
    # Human-readable size
    if [ "$SIZE" -gt 1073741824 ]; then
      SIZE_HR=$(echo "scale=2; $SIZE / 1073741824" | bc 2>/dev/null || echo "$(( SIZE / 1073741824 ))G")
      SIZE_HR="${SIZE_HR}G"
    elif [ "$SIZE" -gt 1048576 ]; then
      SIZE_HR=$(echo "scale=2; $SIZE / 1048576" | bc 2>/dev/null || echo "$(( SIZE / 1048576 ))M")
      SIZE_HR="${SIZE_HR}M"
    else
      SIZE_HR="${SIZE}B"
    fi
    
    # Try to extract hostname from manifest
    MOLT_COUNT="?"
    if tar -tf "$backup_file" | grep -q "manifest.json"; then
      MOLT_COUNT=$(tar -xf "$backup_file" -O manifest.json 2>/dev/null | grep -o '"name":' | wc -l | tr -d ' ')
    fi
    
    printf "%-30s %-15s %-10s %-20s\n" "$FILENAME" "$SIZE_HR" "$MOLT_COUNT" "$MODIFIED"
  done
  
  echo ""
  echo "Total: $(echo "$BACKUP_FILES" | wc -l | tr -d ' ') backups in $BACKUP_DIR"
fi
