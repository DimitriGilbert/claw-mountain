#!/bin/bash
# @parseArger-begin
# @parseArger-help "Show current health status of a molt" --option "help" --short-option "h"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger pos name "Molt name to check"
# @parseArger opt base-dir "Base directory for molts" --short d --complete "directory"
# @parseArger flag json "Output in JSON format"
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
_arg_name="";
# OPTIONALS ARGUMENTS
# Detect base directory (where clmnt is located)
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"
# Go up four levels: .scripts/_molt/_health/ -> .scripts/_molt/ -> .scripts/ -> project root
PROJECT_ROOT="$(cd "$_SCRIPT_DIR/../../../.." && pwd)"
_arg_base_dir="$PROJECT_ROOT"
# FLAGS
_arg_json="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "Show current health status of a molt:"
	echo -e "	name: Molt name to check"
	echo -e "	-d, --base-dir <base-dir>: Base directory for molts [default: '<auto-detected>']"
	echo -e "	--json|--no-json: Output in JSON format"
	echo -e "Usage :
	$0 <name> [--base-dir <value>] [--[no-]json]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="[0;31m";
				;;
			-2)
				_arg_COLOR="[0;33m";
				;;
			-1)
				_arg_COLOR="[1;33m";
				;;
			1)
				_arg_COLOR="[0;32m";
				;;
			2)
				_arg_COLOR="[1;36m";
				;;
			3)
				_arg_COLOR="[0;36m";
				;;
			*)
				_arg_COLOR="[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-d|--base-dir)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_base_dir="$2"
				shift
				;;
			--base-dir=*)
				_arg_base_dir="${_key##--base-dir=}"
				;;
			-d*)
				_arg_base_dir="${_key##-d}"
				;;
			
			--json)
				_arg_json="on"
				;;
			--no-json)
				_arg_json="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			--verbose)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level + 1))";
				else
					_verbose_level="$2";
					shift;
				fi
				;;
			--quiet)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level - 1))";
				else
					_verbose_level="-$2";
					shift;
				fi
				;;
			
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="name"
	if [ "${_positionals_count}" -gt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 1 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').
	${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 1 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="_arg_name ";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	name: ${_arg_name}";
	echo -e "	base-dir: ${_arg_base_dir}";
	echo -e "	json: ${_arg_json}";

}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;




# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

# Auto-detect project root
PROJECT_ROOT="$(cd "$_SCRIPT_DIR/../../../.." && pwd)"
BASE_DIR="${_arg_base_dir:-$PROJECT_ROOT}"
MOLT_NAME="$_arg_name"
MOLT_HOME="$BASE_DIR/$MOLT_NAME"

# Check if molt exists
if [ ! -d "$MOLT_HOME" ]; then
  die "Molt '$MOLT_NAME' not found at $MOLT_HOME" 1
fi

# Load health status
HEALTH_STATUS_FILE="$MOLT_HOME/.molt-state/health-status.json"
WATCH_STATE_FILE="$MOLT_HOME/.molt-state/health-watch-state.json"

HEALTH_DATA="{}"
WATCH_DATA="{}"

if [ -f "$HEALTH_STATUS_FILE" ]; then
  HEALTH_DATA=$(cat "$HEALTH_STATUS_FILE" 2>/dev/null || echo "{}")
fi

if [ -f "$WATCH_STATE_FILE" ]; then
  WATCH_DATA=$(cat "$WATCH_STATE_FILE" 2>/dev/null || echo "{}")
fi

# Extract values
STATUS=$(echo "$HEALTH_DATA" | grep -o '"status":"[^"]*"' | cut -d'"' -f4 || echo "unknown")
TIMESTAMP=$(echo "$HEALTH_DATA" | grep -o '"timestamp":"[^"]*"' | cut -d'"' -f4 || echo "unknown")
PID=$(echo "$HEALTH_DATA" | grep -o '"pid":"[^"]*"' | cut -d'"' -f4 || echo "null")
PORT=$(echo "$HEALTH_DATA" | grep -o '"port":"[^"]*"' | cut -d'"' -f4 || echo "null")
HTTP_STATUS=$(echo "$HEALTH_DATA" | grep -o '"http_status":"[^"]*"' | cut -d'"' -f4 || echo "null")
RESPONSE_TIME=$(echo "$HEALTH_DATA" | grep -o '"response_time_ms":"[^"]*"' | cut -d'"' -f4 || echo "null")

FAILURE_COUNT=$(echo "$WATCH_DATA" | grep -o '"consecutive_failures":[0-9]*' | cut -d: -f2 || echo "0")
LAST_SUCCESS=$(echo "$WATCH_DATA" | grep -o '"last_success":"[^"]*"' | cut -d'"' -f4 || echo "null")
ALERT_SENT=$(echo "$WATCH_DATA" | grep -o '"alert_sent":[0-9]*' | cut -d: -f2 || echo "0")

# Output
if [ "$_arg_json" = "on" ]; then
  echo '{
  "molt": "'$MOLT_NAME'",
  "status": "'$STATUS'",
  "timestamp": "'$TIMESTAMP'",
  "pid": "'${PID:-null}'",
  "port": "'${PORT:-null}'",
  "http_status": "'${HTTP_STATUS:-null}'",
  "response_time_ms": "'${RESPONSE_TIME:-null}'",
  "consecutive_failures": '${FAILURE_COUNT:-0}',
  "last_success": "'${LAST_SUCCESS:-null}'",
  "alert_sent": '${ALERT_SENT:-0}'
}'
else
  echo "Health Status for $MOLT_NAME"
  echo "================================"
  echo ""
  echo "Current Status: $STATUS"
  echo "Last Check: $TIMESTAMP"
  [ -n "$PID" ] && [ "$PID" != "null" ] && echo "PID: $PID"
  [ -n "$PORT" ] && [ "$PORT" != "null" ] && echo "Port: $PORT"
  [ -n "$HTTP_STATUS" ] && [ "$HTTP_STATUS" != "null" ] && echo "HTTP Status: $HTTP_STATUS"
  [ -n "$RESPONSE_TIME" ] && [ "$RESPONSE_TIME" != "null" ] && echo "Response Time: ${RESPONSE_TIME}ms"
  echo ""
  echo "Monitoring State:"
  echo "  Consecutive Failures: $FAILURE_COUNT"
  [ -n "$LAST_SUCCESS" ] && [ "$LAST_SUCCESS" != "null" ] && echo "  Last Success: $LAST_SUCCESS"
  [ "$ALERT_SENT" -eq 1 ] && echo "  Alert Sent: Yes"
fi
