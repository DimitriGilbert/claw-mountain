#!/bin/bash
# @parseArger-begin
# @parseArger-help "Launch a browser as a specific molt user with isolated profile" --option "help" --short-option "h"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger pos name "Molt name to run browser as"
# @parseArger opt browser "Browser to launch" --short b --default-value "firefox" --one-of "firefox" --one-of "chromium" --one-of "chrome" --one-of "brave"
# @parseArger opt profile-dir "Custom profile directory" --short p --complete "directory"
# @parseArger opt url "URL to open" --short u
# @parseArger opt base-dir "Base directory for molts" --short d --default-value "/home/didi/molts" --complete "directory"
# @parseArger flag headless "Run in headless mode (no GUI)"
# @parseArger flag verbose "Enable verbose output" --short v
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
_arg_name="";
# OPTIONALS ARGUMENTS
_arg_browser="firefox"
_one_of_arg_browser=("firefox" "chromium" "chrome" "brave" );
_arg_profile_dir=
_arg_url=
# Detect base directory (where clmnt is located)
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"
# Go up two levels: .scripts/_molt/ -> .scripts/ -> project root
PROJECT_ROOT="$(cd "$_SCRIPT_DIR/../.." && pwd)"
_arg_base_dir="$PROJECT_ROOT"
# FLAGS
_arg_headless="off"
_arg_verbose="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "Launch a browser as a specific molt user with isolated profile:"
	echo -e "	name: Molt name to run browser as"
	echo -e "	-b, --browser <browser>: Browser to launch [default: ' firefox '] [one of 'firefox' 'chromium' 'chrome' 'brave']"
	echo -e "	-p, --profile-dir <profile-dir>: Custom profile directory"
	echo -e "	-u, --url <url>: URL to open"
	echo -e "	-d, --base-dir <base-dir>: Base directory for molts [default: '<auto-detected>']"
	echo -e "	--headless|--no-headless: Run in headless mode (no GUI)"
	echo -e "	-v|--verbose|--no-verbose: Enable verbose output"
	echo -e "Usage :
	$0 <name> [--browser <value>] [--profile-dir <value>] [--url <value>] [--base-dir <value>] [--[no-]headless] [--[no-]verbose]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="\e[0;31m";
				;;
			-2)
				_arg_COLOR="\e[0;33m";
				;;
			-1)
				_arg_COLOR="\e[1;33m";
				;;
			1)
				_arg_COLOR="\e[0;32m";
				;;
			2)
				_arg_COLOR="\e[1;36m";
				;;
			3)
				_arg_COLOR="\e[0;36m";
				;;
			*)
				_arg_COLOR="\e[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}\e[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-b|--browser)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_browser="$2"
				if [[ "${#_one_of_arg_browser[@]}" -gt 0 ]];then [[ "${_one_of_arg_browser[*]}" =~ (^|[[:space:]])"$_arg_browser"($|[[:space:]]) ]] || die "browser must be one of: firefox chromium chrome brave";fi
				shift
				;;
			--browser=*)
				_arg_browser="${1##--browser=}"
				if [[ "${#_one_of_arg_browser[@]}" -gt 0 ]];then [[ "${_one_of_arg_browser[*]}" =~ (^|[[:space:]])"$_arg_browser"($|[[:space:]]) ]] || die "browser must be one of: firefox chromium chrome brave";fi
				;;
			-b*)
				_arg_browser="${1##-b}"
				if [[ "${#_one_of_arg_browser[@]}" -gt 0 ]];then [[ "${_one_of_arg_browser[*]}" =~ (^|[[:space:]])"$_arg_browser"($|[[:space:]]) ]] || die "browser must be one of: firefox chromium chrome brave";fi
				;;
			
			-p|--profile-dir)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_profile_dir="$2"
				shift
				;;
			--profile-dir=*)
				_arg_profile_dir="${1##--profile-dir=}"
				;;
			-p*)
				_arg_profile_dir="${1##-p}"
				;;
			
			-u|--url)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_url="$2"
				shift
				;;
			--url=*)
				_arg_url="${1##--url=}"
				;;
			-u*)
				_arg_url="${1##-u}"
				;;
			
			-d|--base-dir)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_base_dir="$2"
				shift
				;;
			--base-dir=*)
				_arg_base_dir="${1##--base-dir=}"
				;;
			-d*)
				_arg_base_dir="${1##-d}"
				;;
			
			--headless)
				_arg_headless="on"
				;;
			--no-headless)
				_arg_headless="off"
				;;
			-v|--verbose)
				_arg_verbose="on"
				;;
			--no-verbose)
				_arg_verbose="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			--verbose)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level + 1))";
				else
					_verbose_level="$2";
					shift;
				fi
				;;
			--quiet)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level - 1))";
				else
					_verbose_level="-$2";
					shift;
				fi
				;;
			
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="name"
	if [ "${_positionals_count}" -gt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 1 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').
	${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 1 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="_arg_name ";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	name: ${_arg_name}";
	echo -e "	browser: ${_arg_browser}";
	echo -e "	profile-dir: ${_arg_profile_dir}";
	echo -e "	url: ${_arg_url}";
	echo -e "	base-dir: ${_arg_base_dir}";
	echo -e "	headless: ${_arg_headless}";
	echo -e "	verbose: ${_arg_verbose}";

}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;




# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

MOLT_NAME="$_arg_name"
BASE_DIR="$_arg_base_dir"
MOLT_HOME="$BASE_DIR/$MOLT_NAME"
BROWSER="$_arg_browser"

# Check if molt exists
if [ ! -d "$MOLT_HOME" ]; then
  die "Molt '$MOLT_NAME' not found at $MOLT_HOME" 1
fi

# Check if user exists
if ! id "$MOLT_NAME" &>/dev/null; then
  die "User '$MOLT_NAME' does not exist" 1
fi

# Setup profile directory
if [ -n "$_arg_profile_dir" ]; then
  PROFILE_DIR="$_arg_profile_dir"
else
  PROFILE_DIR="$MOLT_HOME/.browser-profiles/$BROWSER"
fi

# Create profile directory
sudo -u "$MOLT_NAME" mkdir -p "$PROFILE_DIR" || die "Failed to create profile directory" 1

log "Launching $BROWSER as $MOLT_NAME" 1
log "Profile: $PROFILE_DIR" 2

# Setup X11 display - check if we're in a graphical environment
if [ "$_arg_headless" = "off" ]; then
  if [ -z "$DISPLAY" ]; then
    # Try to detect display
    if [ -S /tmp/.X11-unix/X0 ] || [ -S /tmp/.X11-unix/X1 ]; then
      DISPLAY=:0
      log "Auto-detected DISPLAY=$DISPLAY" 2
    else
      die "No DISPLAY found. Run with --headless or ensure X11 is available" 1
    fi
  fi
  
  # Allow molt user to access X11
  if command -v xhost >/dev/null 2>&1; then
    xhost +local:"$MOLT_NAME" 2>/dev/null || log "Warning: Could not add $MOLT_NAME to xhost" -1
  fi
fi

# Build browser command based on browser type
case "$BROWSER" in
  firefox)
    BROWSER_CMD="firefox"
    PROFILE_FLAG="--profile"
    HEADLESS_FLAG="--headless"
    ;;
  chromium)
    BROWSER_CMD="chromium"
    PROFILE_FLAG="--user-data-dir"
    HEADLESS_FLAG="--headless"
    ;;
  chrome)
    BROWSER_CMD="google-chrome"
    PROFILE_FLAG="--user-data-dir"
    HEADLESS_FLAG="--headless"
    ;;
  brave)
    BROWSER_CMD="brave"
    PROFILE_FLAG="--user-data-dir"
    HEADLESS_FLAG="--headless"
    ;;
esac

# Check if browser is installed
if ! command -v "$BROWSER_CMD" >/dev/null 2>&1; then
  die "Browser '$BROWSER_CMD' not found. Please install it first." 1
fi

# Build command arguments
BROWSER_ARGS=""

# Add profile/data directory
if [ "$BROWSER" = "firefox" ]; then
  BROWSER_ARGS="$PROFILE_FLAG \"$PROFILE_DIR\""
else
  # For Chromium-based browsers
  BROWSER_ARGS="$PROFILE_FLAG=\"$PROFILE_DIR\""
fi

# Add headless flag if requested
if [ "$_arg_headless" = "on" ]; then
  BROWSER_ARGS="$BROWSER_ARGS $HEADLESS_FLAG"
fi

# Add URL if provided
if [ -n "$_arg_url" ]; then
  BROWSER_ARGS="$BROWSER_ARGS \"$_arg_url\""
fi

# Launch browser as molt user
log "Starting $BROWSER..." 1
if [ "$_arg_headless" = "off" ]; then
  export DISPLAY
  sudo -u "$MOLT_NAME" bash -c "export DISPLAY='$DISPLAY'; $BROWSER_CMD $BROWSER_ARGS" &
else
  sudo -u "$MOLT_NAME" bash -c "$BROWSER_CMD $BROWSER_ARGS" &
fi

BROWSER_PID=$!
log "Browser started (PID: $BROWSER_PID)" 1
log "Profile stored in: $PROFILE_DIR" 1

# Store browser PID
sudo -u "$MOLT_NAME" bash -c "echo $BROWSER_PID > '$MOLT_HOME/.browser-profiles/$BROWSER.pid'"

if [ "$_arg_headless" = "off" ]; then
  log "Browser window should appear shortly" 1
  log "To stop: kill $BROWSER_PID" 1
else
  log "Headless browser running in background" 1
  log "To stop: kill $BROWSER_PID" 1
fi
