#!/bin/bash
# @parseArger-begin
# @parseArger-help "Completely remove a molt (user, home directory, processes)" --option "help" --short-option "h"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger pos name "Molt name to delete"
# @parseArger opt base-dir "Base directory for molts" --short d --complete "directory"
# @parseArger flag force "Skip confirmation prompt"
# @parseArger flag keep-home "Keep home directory (only remove user)"
# @parseArger flag verbose "Enable verbose output" --short v
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
_arg_name="";
# OPTIONALS ARGUMENTS
# Detect base directory (where clmnt is located)
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"
# Go up two levels: .scripts/_molt/ -> .scripts/ -> project root
PROJECT_ROOT="$(cd "$_SCRIPT_DIR/../.." && pwd)"
_arg_base_dir="$PROJECT_ROOT"
# FLAGS
_arg_force="off"
_arg_keep_home="off"
_arg_verbose="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "Completely remove a molt (user, home directory, processes):"
	echo -e "	name: Molt name to delete"
	echo -e "	-d, --base-dir <base-dir>: Base directory for molts [default: '<auto-detected>']"
	echo -e "	--force|--no-force: Skip confirmation prompt"
	echo -e "	--keep-home|--no-keep-home: Keep home directory (only remove user)"
	echo -e "	-v|--verbose|--no-verbose: Enable verbose output"
	echo -e "Usage :
	$0 <name> [--base-dir <value>] [--[no-]force] [--[no-]keep-home] [--[no-]verbose]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="\e[0;31m";
				;;
			-2)
				_arg_COLOR="\e[0;33m";
				;;
			-1)
				_arg_COLOR="\e[1;33m";
				;;
			1)
				_arg_COLOR="\e[0;32m";
				;;
			2)
				_arg_COLOR="\e[1;36m";
				;;
			3)
				_arg_COLOR="\e[0;36m";
				;;
			*)
				_arg_COLOR="\e[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}\e[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-d|--base-dir)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_base_dir="$2"
				shift
				;;
			--base-dir=*)
				_arg_base_dir="${1##--base-dir=}"
				;;
			-d*)
				_arg_base_dir="${1##-d}"
				;;
			
			--force)
				_arg_force="on"
				;;
			--no-force)
				_arg_force="off"
				;;
			--keep-home)
				_arg_keep_home="on"
				;;
			--no-keep-home)
				_arg_keep_home="off"
				;;
			-v|--verbose)
				_arg_verbose="on"
				;;
			--no-verbose)
				_arg_verbose="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			--verbose)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level + 1))";
				else
					_verbose_level="$2";
					shift;
				fi
				;;
			--quiet)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level - 1))";
				else
					_verbose_level="-$2";
					shift;
				fi
				;;
			
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="name"
	if [ "${_positionals_count}" -gt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 1 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').
	${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 1 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="_arg_name ";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	name: ${_arg_name}";
	echo -e "	base-dir: ${_arg_base_dir}";
	echo -e "	force: ${_arg_force}";
	echo -e "	keep-home: ${_arg_keep_home}";
	echo -e "	verbose: ${_arg_verbose}";

}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;




# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

# Source registry library
source "$_SCRIPT_DIR/../lib/molt-registry" || die "Failed to load registry library" 1

MOLT_NAME="$_arg_name"
BASE_DIR="$_arg_base_dir"
MOLT_HOME="$BASE_DIR/$MOLT_NAME"

# Check if molt exists (directory OR user)
MOLT_EXISTS=0
if [ -d "$MOLT_HOME" ]; then
  MOLT_EXISTS=1
fi
if id "$MOLT_NAME" &>/dev/null; then
  MOLT_EXISTS=1
fi

if [ $MOLT_EXISTS -eq 0 ]; then
  if [ "$_arg_force" = "on" ]; then
    log "No molt '$MOLT_NAME' found, but --force specified - proceeding anyway" -1
  else
    die "Molt '$MOLT_NAME' not found at $MOLT_HOME and user does not exist" 1
  fi
fi

# Confirmation prompt
if [ "$_arg_force" = "off" ]; then
  echo "WARNING: This will permanently delete molt '$MOLT_NAME'"
  echo "Home directory: $MOLT_HOME"
  if [ "$_arg_keep_home" = "off" ]; then
    echo "This will remove the user AND delete the home directory"
  else
    echo "This will remove the user but KEEP the home directory"
  fi
  echo ""
  read -p "Are you sure? Type 'yes' to confirm: " confirm
  if [ "$confirm" != "yes" ]; then
    log "Deletion cancelled" 1
    exit 0
  fi
fi

# Stop any running processes (best effort)
if [ -d "$MOLT_HOME" ]; then
  log "Stopping any running processes for $MOLT_NAME..." 1
  ${0%/*}/molt-stop "$MOLT_NAME" -d "$BASE_DIR" --force 2>/dev/null || true
fi

# Remove ALL cron jobs for molt user (NUCLEAR - as requested)
if id "$MOLT_NAME" &>/dev/null; then
  log "Removing all cron jobs for $MOLT_NAME..." 1
  sudo -u "$MOLT_NAME" crontab -r 2>/dev/null || log "No cron jobs to remove (or crontab not found)" 2
fi

# Kill any remaining browser processes (best effort)
if id "$MOLT_NAME" &>/dev/null; then
  pkill -u "$MOLT_NAME" -f "firefox|chrome|chromium|brave" 2>/dev/null || true
fi

# Stop and remove OpenClaw systemd service (if exists)
log "Removing OpenClaw systemd service..." 1
# Try user service first
if systemctl --user -M "$MOLT_NAME@" status openclaw 2>/dev/null | grep -q "Active:"; then
  log "Found user OpenClaw service, stopping..." 2
  sudo -u "$MOLT_NAME" systemctl --user stop openclaw 2>/dev/null || true
  sudo -u "$MOLT_NAME" systemctl --user disable openclaw 2>/dev/null || true
  sudo rm -f "/home/$MOLT_NAME/.config/systemd/user/openclaw.service" 2>/dev/null || true
  sudo -u "$MOLT_NAME" systemctl --user daemon-reload 2>/dev/null || true
fi
# Try system service
if systemctl status "openclaw-$MOLT_NAME" 2>/dev/null | grep -q "Active:"; then
  log "Found system OpenClaw service, stopping..." 2
  sudo systemctl stop "openclaw-$MOLT_NAME" 2>/dev/null || true
  sudo systemctl disable "openclaw-$MOLT_NAME" 2>/dev/null || true
  sudo rm -f "/etc/systemd/system/openclaw-$MOLT_NAME.service" 2>/dev/null || true
  sudo systemctl daemon-reload 2>/dev/null || true
fi

# Remove user (if exists)
if id "$MOLT_NAME" &>/dev/null; then
  log "Removing user '$MOLT_NAME'..." 1
  sudo userdel "$MOLT_NAME" 2>/dev/null || log "Warning: Failed to remove user '$MOLT_NAME' (may require manual cleanup)" -1
fi

# Remove home directory (unless --keep-home)
if [ "$_arg_keep_home" = "off" ]; then
  if [ -d "$MOLT_HOME" ]; then
    log "Removing home directory: $MOLT_HOME" 1
    sudo rm -rf "$MOLT_HOME" 2>/dev/null || log "Warning: Failed to remove home directory (may require manual cleanup)" -1
  fi
fi

# Clean up any stale PID files
if [ -f "$MOLT_HOME/.openclaw/gateway.pid" ]; then
  rm -f "$MOLT_HOME/.openclaw/gateway.pid" 2>/dev/null || true
fi

# Remove from registry
if check_jq && registry_has_molt "$BASE_DIR" "$MOLT_NAME"; then
  registry_remove_molt "$BASE_DIR" "$MOLT_NAME"
  log "Removed '$MOLT_NAME' from registry" 2
fi

log "Molt '$MOLT_NAME' cleanup completed" 1
