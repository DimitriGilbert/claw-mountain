#!/bin/bash
# @parseArger-begin
# @parseArger-help "Setup drag-and-drop dropzone for molt using systemd path units" --option "help" --short-option "h"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger pos name "Molt name for dropzone"
# @parseArger opt base-dir "Base directory for molts" --short d --complete "directory"
# @parseArger flag remove "Remove the dropzone systemd units"
# @parseArger flag verbose "Enable verbose output" --short v
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
_arg_name="";
# OPTIONALS ARGUMENTS
_arg_base_dir=
# FLAGS
_arg_remove="off"
_arg_verbose="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "Setup drag-and-drop dropzone for molt using systemd path units:"
	echo -e "	name: Molt name for dropzone"
	echo -e "	-d, --base-dir <base-dir>: Base directory for molts"
	echo -e "	--remove|--no-remove: Remove the dropzone systemd units"
	echo -e "	-v|--verbose|--no-verbose: Enable verbose output"
	echo -e "Usage :
	$0 <name> [--base-dir <value>] [--[no-]remove] [--[no-]verbose]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="\033[0;31m";
				;;
			-2)
				_arg_COLOR="\033[0;33m";
				;;
			-1)
				_arg_COLOR="\033[1;33m";
				;;
			1)
				_arg_COLOR="\033[0;32m";
				;;
			2)
				_arg_COLOR="\033[1;36m";
				;;
			3)
				_arg_COLOR="\033[0;36m";
				;;
			*)
				_arg_COLOR="\033[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}\033[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-d|--base-dir)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_base_dir="$2"
				shift
				;;
			--base-dir=*)
				_arg_base_dir="${_key##--base-dir=}"
				;;
			-d*)
				_arg_base_dir="${_key##-d}"
				;;
			
			--remove)
				_arg_remove="on"
				;;
			--no-remove)
				_arg_remove="off"
				;;
			-v|--verbose)
				_arg_verbose="on"
				;;
			--no-verbose)
				_arg_verbose="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			--verbose)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level + 1))";
				else
					_verbose_level="$2";
					shift;
				fi
				;;
			--quiet)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level - 1))";
				else
					_verbose_level="-$2";
					shift;
				fi
				;;
			
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="name"
	if [ "${_positionals_count}" -gt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 1 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').\n\t${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 1 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 1 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="_arg_name ";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	name: ${_arg_name}";
	echo -e "	base-dir: ${_arg_base_dir}";
	echo -e "	remove: ${_arg_remove}";
	echo -e "	verbose: ${_arg_verbose}";

}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;




# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

# Auto-detect base directory if not provided
if [ -z "$_arg_base_dir" ]; then
  _SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"
  PROJECT_ROOT="$(cd "$_SCRIPT_DIR/../.." && pwd)"
  _arg_base_dir="$PROJECT_ROOT"
fi

MOLT_NAME="$_arg_name"
BASE_DIR="$_arg_base_dir"
MOLT_HOME="$BASE_DIR/$MOLT_NAME"
DROPZONE_DIR="$BASE_DIR/.dropzone/$MOLT_NAME"

# Check if molt exists
if [ ! -d "$MOLT_HOME" ]; then
  die "Molt '$MOLT_NAME' not found at $MOLT_HOME" 1
fi

# Check if user exists
if ! id "$MOLT_NAME" &>/dev/null; then
  die "User '$MOLT_NAME' does not exist" 1
fi

# Get port and token from config
CONFIG_FILE="$MOLT_HOME/.openclaw/openclaw.json"
if [ ! -f "$CONFIG_FILE" ]; then
  die "OpenClaw config not found at $CONFIG_FILE" 1
fi

MOLT_PORT=$(grep -o '"port":[[:space:]]*[0-9]*' "$CONFIG_FILE" 2>/dev/null | grep -o '[0-9]*$' || echo "19001")
GATEWAY_TOKEN=$(grep -o '"token":[[:space:]]*"[^"]*"' "$CONFIG_FILE" 2>/dev/null | sed 's/"token":[[:space:]]*"//;s/"$//' || echo "")

SERVICE_NAME="molt-${MOLT_NAME}-dropzone"
PATH_UNIT="${SERVICE_NAME}.path"
SERVICE_UNIT="${SERVICE_NAME}.service"

# Handle removal
if [ "$_arg_remove" = "on" ]; then
  log "Removing dropzone for $MOLT_NAME..." 1
  
  # Stop and disable units
  systemctl --user stop "$PATH_UNIT" 2>/dev/null || true
  systemctl --user disable "$PATH_UNIT" 2>/dev/null || true
  systemctl --user stop "$SERVICE_UNIT" 2>/dev/null || true
  systemctl --user disable "$SERVICE_UNIT" 2>/dev/null || true
  
  # Remove unit files
  rm -f "$HOME/.config/systemd/user/$PATH_UNIT"
  rm -f "$HOME/.config/systemd/user/$SERVICE_UNIT"
  
  # Reload daemon
  systemctl --user daemon-reload
  
  log "Dropzone removed successfully" 1
  exit 0
fi

# Create dropzone directory
log "Creating dropzone directory: $DROPZONE_DIR" 1
mkdir -p "$DROPZONE_DIR"
chown "$MOLT_NAME:$MOLT_NAME" "$DROPZONE_DIR" 2>/dev/null || true

# Create dropzone processor script
PROCESSOR_SCRIPT="$BASE_DIR/.scripts/_molt/_dropzone-process"
log "Creating dropzone processor script..." 1

mkdir -p "$BASE_DIR/.scripts/_molt"
cat > "$PROCESSOR_SCRIPT" << 'PROCESSOR_EOF'
#!/bin/bash
# Dropzone file processor - triggered by systemd path unit

MOLT_NAME="$1"
BASE_DIR="$2"
DROPZONE_DIR="$BASE_DIR/.dropzone/$MOLT_NAME"
MOLT_HOME="$BASE_DIR/$MOLT_NAME"
CONFIG_FILE="$MOLT_HOME/.openclaw/openclaw.json"

# Get gateway details
MOLT_PORT=$(grep -o '"port":[[:space:]]*[0-9]*' "$CONFIG_FILE" 2>/dev/null | grep -o '[0-9]*$' || echo "19001")
GATEWAY_TOKEN=$(grep -o '"token":[[:space:]]*"[^"]*"' "$CONFIG_FILE" 2>/dev/null | sed 's/"token":[[:space:]]*"//;s/"$//' || echo "")

# Find new files (not yet processed)
find "$DROPZONE_DIR" -type f -not -name ".processed-*" 2>/dev/null | while read -r file; do
  filename=$(basename "$file")
  processed_marker="$DROPZONE_DIR/.processed-$filename"
  
  # Skip if already processed
  [ -f "$processed_marker" ] && continue
  
  # Mark as processed
  touch "$processed_marker"
  
  # Send webhook to OpenClaw gateway
  if [ -n "$GATEWAY_TOKEN" ]; then
    curl -s -X POST "http://127.0.0.1:${MOLT_PORT}/hooks/agent" \
      -H "Content-Type: application/json" \
      -H "Authorization: Bearer ${GATEWAY_TOKEN}" \
      -d "{
        \"name\": \"Dropzone File\",
        \"sessionTarget\": \"isolated\",
        \"wakeMode\": \"now\",
        \"payload\": {
          \"kind\": \"agentTurn\",
          \"message\": \"A file was dropped in the dropzone: $file (filename: $filename). Please analyze it.\",
          \"deliver\": false
        },
        \"isolation\": {
          \"postToMainPrefix\": \"Dropzone\",
          \"postToMainMode\": \"summary\"
        }
      }" > /dev/null 2>&1
  fi
done
PROCESSOR_EOF

chmod +x "$PROCESSOR_SCRIPT"

# Create systemd path unit
log "Creating systemd path unit..." 1
mkdir -p "$HOME/.config/systemd/user"

cat > "$HOME/.config/systemd/user/$PATH_UNIT" << EOF
[Unit]
Description=Monitor dropzone for $MOLT_NAME

[Path]
PathChanged=$DROPZONE_DIR

[Install]
WantedBy=default.target
EOF

# Create systemd service unit
cat > "$HOME/.config/systemd/user/$SERVICE_UNIT" << EOF
[Unit]
Description=Process dropzone file for $MOLT_NAME

[Service]
Type=oneshot
WorkingDirectory=$BASE_DIR
ExecStart=$PROCESSOR_SCRIPT $MOLT_NAME $BASE_DIR
User=$MOLT_NAME

[Install]
WantedBy=default.target
EOF

# Enable and start units
log "Enabling and starting dropzone units..." 1
systemctl --user daemon-reload
systemctl --user enable "$PATH_UNIT"
systemctl --user start "$PATH_UNIT"
systemctl --user enable "$SERVICE_UNIT"

log "" 0
log "Dropzone configured successfully!" 1
log "Drop files to: $DROPZONE_DIR" 1
log "Files will trigger isolated agent sessions" 1
log "" 0
log "Commands:" 2
log "  systemctl --user status $PATH_UNIT" 2
log "  systemctl --user status $SERVICE_UNIT" 2
