#!/bin/bash
# @parseArger-begin
# @parseArger-help "Clone an existing molt configuration to a new molt" --option "help" --short-option "h"
# @parseArger-verbose --option "verbose" --level "0" --quiet-option "quiet"
_has_colors=0
if [ -t 1 ]; then # Check if stdout is a terminal
	ncolors=$(tput colors 2>/dev/null)
	if [ -n "$ncolors" ] && [ "$ncolors" -ge 8 ]; then
		_has_colors=1
	fi
fi
# @parseArger-declarations
# @parseArger pos source "Source molt name"
# @parseArger pos target "Target molt name"
# @parseArger opt port "Gateway port for new molt (auto-assign if not provided)" --short p
# @parseArger opt base-dir "Base directory for molts" --short d --complete "directory"
# @parseArger flag skip-onboard "Skip OpenClaw onboarding (manual setup required)"
# @parseArger flag verbose "Enable verbose output" --short v
# @parseArger-declarations-end

# @parseArger-utils
_helpHasBeenPrinted=1;
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)";
# @parseArger-utils-end

# @parseArger-parsing

__cli_arg_count=$#;

die()
{
	local _ret=1
    if [[ -n "$2" ]] && [[ "$2" =~ ^[0-9]+$ ]]; then
   	_ret="$2"
    fi
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	log "$1" -3 >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options=''
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# POSITIONALS ARGUMENTS
_positionals=();
_optional_positionals=();
_arg_source="";
_arg_target="";
# OPTIONALS ARGUMENTS
_arg_port=
# Detect base directory (where clmnt is located)
_SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"
# Go up two levels: .scripts/_molt/ -> .scripts/ -> project root
PROJECT_ROOT="$(cd "$_SCRIPT_DIR/../.." && pwd)"
_arg_base_dir="$PROJECT_ROOT"
# FLAGS
_arg_skip_onboard="off"
_arg_verbose="off"
# NESTED
_verbose_level="0";



print_help()
{
	_triggerSCHelp=1;

	if [[ "$_helpHasBeenPrinted" == "1" ]]; then
		_helpHasBeenPrinted=0;
		echo -e "Clone an existing molt configuration to a new molt:"
	echo -e "	source: Source molt name"
	echo -e "	target: Target molt name"
	echo -e "	-p, --port <port>: Gateway port for new molt (auto-assign if not provided)"
	echo -e "	-d, --base-dir <base-dir>: Base directory for molts [default: '<auto-detected>']"
	echo -e "	--skip-onboard|--no-skip-onboard: Skip OpenClaw onboarding (manual setup required)"
	echo -e "	-v|--verbose|--no-verbose: Enable verbose output"
	echo -e "Usage :
	$0 <source> <target> [--port <value>] [--base-dir <value>] [--[no-]skip-onboard] [--[no-]verbose]";
	fi

}

log() {
	local _arg_msg="${1}";
	local _arg_level="${2:-0}";
	if [ "${_arg_level}" -le "${_verbose_level}" ]; then
		case "$_arg_level" in
			-3)
				_arg_COLOR="\e[0;31m";
				;;
			-2)
				_arg_COLOR="\e[0;33m";
				;;
			-1)
				_arg_COLOR="\e[1;33m";
				;;
			1)
				_arg_COLOR="\e[0;32m";
				;;
			2)
				_arg_COLOR="\e[1;36m";
				;;
			3)
				_arg_COLOR="\e[0;36m";
				;;
			*)
				_arg_COLOR="\e[0m";
				;;
		esac
		if [ "${_has_colors}" == "1" ]; then
			echo -e "${_arg_COLOR}${_arg_msg}\e[0m";
		else
			echo "${_arg_msg}";
		fi
	fi
}

parse_commandline()
{
	_positionals_count=0
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-p|--port)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				local _regex='^[0-9]+$';if [[ -n "$_regex" ]] && [[ ! "$2" =~ $_regex ]]; then die "port does not match pattern: $_regex"; fi; _arg_port="$2"
				shift
				;;
			--port=*)
			    local _regex='^[0-9]+$';if [[ -n "$_regex" ]] && [[ ! "${1##--port=}" =~ $_regex ]]; then die "port does not match pattern: $_regex"; fi;
				_arg_port="${1##--port=}"
				;;
			-p*)
			      local _regex='^[0-9]+$';if [[ -n "$_regex" ]] && [[ ! "${1##-p}" =~ $_regex ]]; then die "port does not match pattern: $_regex"; fi;
				_arg_port="${1##-p}"
				;;
			
			-d|--base-dir)
				test $# -lt 2 && die "Missing value for the option: '$_key'" 1
				_arg_base_dir="$2"
				shift
				;;
			--base-dir=*)
				_arg_base_dir="${1##--base-dir=}"
				;;
			-d*)
				_arg_base_dir="${1##-d}"
				;;
			
			--skip-onboard)
				_arg_skip_onboard="on"
				;;
			--no-skip-onboard)
				_arg_skip_onboard="off"
				;;
			-v|--verbose)
				_arg_verbose="on"
				;;
			--no-verbose)
				_arg_verbose="off"
				;;
			-h|--help)
				print_help;
				exit 0;
				;;
			-h*)
				print_help;
				exit 0;
				;;
			--verbose)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level + 1))";
				else
					_verbose_level="$2";
					shift;
				fi
				;;
			--quiet)
				if [ $# -lt 2 ];then
					_verbose_level="$((_verbose_level - 1))";
				else
					_verbose_level="-$2";
					shift;
				fi
				;;
			
				*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="source target"
	if [ "${_positionals_count}" -gt 2 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect at most 2 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}').
	${_positionals[*]}" 1
	fi
	if [ "${_positionals_count}" -lt 2 ] && [ "$_helpHasBeenPrinted" == "1" ];then
		_PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require at least 2 (namely: $_required_args_string), but got only ${_positionals_count}.
	${_positionals[*]}" 1;
	fi
}


assign_positional_args()
{
	local _positional_name _shift_for=$1;
	_positional_names="_arg_source _arg_target ";
	shift "$_shift_for"
	for _positional_name in ${_positional_names};do
		test $# -gt 0 || break;
		eval "if [ \"\$_one_of${_positional_name}\" != \"\" ];then [[ \"\${_one_of${_positional_name}[*]}\" =~ \"\${1}\" ]];fi" || die "${_positional_name} must be one of: $(eval "echo \"\${_one_of${_positional_name}[*]}\"")" 1;
		local _match_var="_match${_positional_name}";
		local _regex="${!_match_var}";
		if [ -n "$_regex" ]; then
			[[ "${1}" =~ $_regex ]] || die "${_positional_name} does not match pattern: $_regex"
		fi
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an ParseArger bug." 1;
		shift;
	done
}

print_debug()
{
	print_help
	# shellcheck disable=SC2145
	echo "DEBUG: $0 $@";
	
	echo -e "	source: ${_arg_source}";
	echo -e "	target: ${_arg_target}";
	echo -e "	port: ${_arg_port}";
	echo -e "	base-dir: ${_arg_base_dir}";
	echo -e "	skip-onboard: ${_arg_skip_onboard}";
	echo -e "	verbose: ${_arg_verbose}";

}


on_interrupt() {
	die Process aborted! 130;
}


parse_commandline "$@";
handle_passed_args_count;
assign_positional_args 1 "${_positionals[@]}";
trap on_interrupt INT;




# @parseArger-parsing-end
# print_debug "$@"
# @parseArger-end

SOURCE_MOLT="$_arg_source"
TARGET_MOLT="$_arg_target"
BASE_DIR="$_arg_base_dir"
SOURCE_HOME="$BASE_DIR/$SOURCE_MOLT"
TARGET_HOME="$BASE_DIR/$TARGET_MOLT"

# Check source exists
if [ ! -d "$SOURCE_HOME" ]; then
  die "Source molt '$SOURCE_MOLT' not found at $SOURCE_HOME" 1
fi

# Check target doesn't exist
if [ -d "$TARGET_HOME" ]; then
  die "Target molt '$TARGET_MOLT' already exists" 1
fi

log "Cloning $SOURCE_MOLT to $TARGET_MOLT..." 1

# Create new molt using create-molt script
CREATE_ARGS="$TARGET_MOLT -d $BASE_DIR"
if [ -n "$_arg_port" ]; then
  CREATE_ARGS="$CREATE_ARGS -p $_arg_port"
fi
if [ "$_arg_verbose" = "on" ]; then
  CREATE_ARGS="$CREATE_ARGS -v"
fi

log "Creating new molt..." 1
${0%/*}/create-molt $CREATE_ARGS || die "Failed to create target molt" 1

# Copy configuration files from source
log "Copying configuration..." 1

# Copy openclaw.json but update the port
SOURCE_CONFIG="$SOURCE_HOME/.openclaw/openclaw.json"
TARGET_CONFIG="$TARGET_HOME/.openclaw/openclaw.json"

if [ -f "$SOURCE_CONFIG" ]; then
  # Get the port from target config (create-molt set it)
  TARGET_PORT=$(grep -o '"port":[[:space:]]*[0-9]*' "$TARGET_CONFIG" | grep -o '[0-9]*$')
  
  # Copy config but replace port
  cat "$SOURCE_CONFIG" | sed "s/\"port\":[[:space:]]*[0-9]*/\"port\": $TARGET_PORT/" | sudo -u "$TARGET_MOLT" tee "$TARGET_CONFIG" > /dev/null
  log "Copied and updated configuration" 1
fi

# Copy workspace AGENTS.md and other config files if they exist
for file in "$SOURCE_HOME/.openclaw/workspace/"*.md; do
  if [ -f "$file" ]; then
    filename=$(basename "$file")
    sudo -u "$TARGET_MOLT" cp "$file" "$TARGET_HOME/.openclaw/workspace/$filename"
    log "Copied workspace file: $filename" 2
  fi
done

log "Clone complete!" 1

if [ "$_arg_skip_onboard" = "off" ]; then
  log "Next steps:" 1
  log "1. Review copied configuration" 0
  log "2. Run onboarding if needed: sudo -u $TARGET_MOLT openclaw onboard" 0
  log "3. Start the molt: ${0%/*}/molt-start $TARGET_MOLT" 0
else
  log "Skipped onboarding - you'll need to configure manually" 1
fi
